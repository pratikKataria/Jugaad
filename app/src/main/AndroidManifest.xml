<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tricky__tweaks.jugaad">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".Jugaad"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Main.UserOptions.activity.PlaceItemOrderActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateVisible|adjustResize|adjustUnspecified"/>
        <activity android:name=".activity.Main.UserOptions.activity.PostNewItemActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Main.categories.FootwearActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Main.categories.FurnitureActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Main.categories.JewelleryActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Main.categories.ClothActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Main.UserOptions.activity.OptionsMainActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Login.SignUp"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Login.Login"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Splash.OnBoardingActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.Splash.SplashActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Main.MainActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>